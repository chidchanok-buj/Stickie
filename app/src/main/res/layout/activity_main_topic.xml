    <Button
        android:id="@+id/arqs"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_yellow_button"
        android:text="@string/arqs_topic"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/routing_protocol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/routing_protocol"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_green_button"
        android:text="@string/routing_protocols_topic"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/congestion_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/congestion_control"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/rounded_blue_button"
        android:text="@string/congestion_control_topic"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

